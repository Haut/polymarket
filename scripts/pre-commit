#!/bin/bash

set -e

echo "Running pre-commit checks..."

# Check formatting (--check mode doesn't modify files, just fails if unformatted)
echo "▶ Checking formatting..."
if ! dune fmt 2>&1 | grep -q "^File"; then
    echo "  ✓ Formatting OK"
else
    echo "  ✗ Formatting issues found. Run 'dune fmt' to fix."
    exit 1
fi

# Build the project
echo "▶ Building..."
if dune build; then
    echo "  ✓ Build OK"
else
    echo "  ✗ Build failed"
    exit 1
fi

# Run tests
echo "▶ Running tests..."
if dune runtest; then
    echo "  ✓ Tests OK"
else
    echo "  ✗ Tests failed"
    exit 1
fi

# Build documentation (check for odoc errors, warnings are informational)
echo "▶ Building docs..."
DOC_OUTPUT=$(dune build @doc 2>&1)
# Filter out known informational warnings (include expansion, unresolved refs to private modules)
REAL_ERRORS=$(echo "$DOC_OUTPUT" | grep -E "Error:" || true)
if [ -n "$REAL_ERRORS" ]; then
    echo "  ✗ Documentation has errors"
    echo "$REAL_ERRORS" | head -10
    exit 1
else
    echo "  ✓ Docs OK"
fi

echo "✓ All pre-commit checks passed!"
